button.btn.btn-social.btn-github(onclick='githubLogin()') GitHub
script(type='text/javascript').
  function githubLogin() {
    var clientId = '#{socialProviders.github.clientId}';
    var gitHubScope = '#{socialProviders.github.scope}';
    var redirectUri = '#{url}#{socialProviders.github.uri}';
    var oauthStateToken = '#{oauthStateToken}';

    var url = 'https://github.com/login/oauth/authorize' +
      '?client_id=' + encodeURIComponent(clientId) +
      '&scope=' + encodeURIComponent(gitHubScope) +
      '&redirect_uri=' + encodeURIComponent(redirectUri) +
      '&state=' + encodeURIComponent(oauthStateToken);

    window.location = url;
  }
